<h1>Welcome {{user.firstName}}</h1>
<h4>Your Stories</h4>
{{#if stories}}
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each stories}}
            <tr class="table-rows">
                <td class="cat"><a href="/stories/show/{{_id}}">{{title}}</a></td>
                <td>{{formatDate date "MMMM Do YYYY"}}</td>
                <td><span class="dash-status">{{status}}</span></td>
                <td><a class="left-align btn grey" href="/stories/edit/{{_id}}">Edit</a>
                <form action="/stories/{{_id}}?_method=DELETE" method="post" id="delete-form">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn grey">Delete</button> 
                </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <p>You have not created any storie yet</p>
{{/if}}
